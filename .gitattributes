import math

# our test matrix has 4 rows and 10 columns
n_row = 20
n_col = 26

# available seat
available_seat = '.'

# create some available seating
seating = []
for r in range(n_row):
    row = []
    for c in range(n_col):
        row.append(available_seat)
    seating.append(row)

# print available seating
for r in range(n_row):
    print(r+1, end="\t")
    for c in range(n_col):
        print(seating[r][c], end=" ")
    print()

# Set Seating prizes, tax and mask fee
Front_seat_price = 80
middle_seat_price = 50 
back_seat_price = 25
sales_tax_rate = 0.0725
mask_fee = 5.00

#calculate prices for tickets 
total_price = seat_price * quantity 
mask_fee = Mask_fee * quantity
tax = total_price * sales_tax_rate
total = total_price + tax + mask_fee

# To purchase tickets 
def purchase_tickets(ticket_type, quantity):
    if ticket_type == 'front': 
        seat_price = Front_seat_price
        start_row, end_row = 0, 4
    elif ticket_type == 'middle':
        seat_price = middle_seat_price
        start_row, end_row = 5, 10
    elif ticket_type == 'back':
        seat_price = back_seat_price
        start_row, end_row = 11, 19
    else:
        print("Not a valid ticket type.")
        return

# Print a receipt for the user, ask for name and email

name = input("Enter your name: ")
email_address = input("Enter your email address: ")

Print("Ticket Summary:")
print(f"Ticket Type: {ticket_type}")
print(f"Quantity: {quantity}")
print(f"Seat Price: ${seat_price}")
print(f"total price: {total_price}")
print(f"Tax: ${tax:.2f}")
print(f"Mask Fee: ${mask_fee:.2}")
print(f"Total: ${total:.2f}")

# Handle available seats when attempting to purchase
for row in range(start_row, end_row + 1):
    seats = seating[row]
    for i in range(len(seats) - 2):
        if quantity == 0:
            break
        if seats[i] == '.' and seats[i + 1] == '.': 
        seats[i] = 'x'
        seats[i + 1] = 'x'
        quantity = 1

